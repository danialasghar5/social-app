<div align="center">
  <h1>All Posts</h1>
  <% if @posts.count.zero? %>
    <center><h1>No Posts Here!</h1></center>
  <% end %>
  <% @posts.each do |post| %>
    <div class="posts mb-4">
      <div class="post-content">
        <a href="/posts/<%= post.id %>">
          <b><h3 class="post-title"><%= post.title %></h3></b>
        </a>
        <% if post.image.attached? %>
          <p class="post-image index-image"><img src="<%= (url_for(post.image)) if post.image.attached? %>"> </p>
        <% end %>
        <p class="post-title"><%= post.body %></p>
      </div>
    </div>

  <% end %>
</div>

